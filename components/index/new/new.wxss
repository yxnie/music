.title {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  font-size: 36rpx;
}
.left {
  padding-top: 8px;
  display: flex;
}
.right {
  padding: 10rpx 18rpx;
  background: #e2e2e2;
  border-radius: 54rpx;
}
.all {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-between;
}

.recommendone {
  flex: 1;
  position: relative;
}

.recommendone image {
  display: block;
  width: 228rpx;
  height: 170rpx;
  border-radius: 14rpx;
}

.name {
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.playCount {
  position: absolute;
  color: white;
  top:130rpx;
  font-size: 26rpx;
  left: 10rpx;
}
.playCount image {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
}
.new {
  margin-right: 30rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 44rpx;
}
.check {
  font-weight: bold;
  color: black;
  font-size: 44rpx;
}
